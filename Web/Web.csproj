<Project Sdk="Microsoft.NET.Sdk.Web">
    <ItemGroup>
        <PackageReference Include="Magick.NET-Q16-AnyCPU" />
        <PackageReference Include="Microsoft.Extensions.ObjectPool" />
        <PackageReference Include="PdfPig" />
        <PackageReference Include="Tesseract"/>
    </ItemGroup>
    <Target Name="CopyTesseractDlls" AfterTargets="AfterBuild">
        <Exec Command="ln -sf /opt/homebrew/lib/libleptonica.dylib '$(TargetDir)/libleptonica-1.82.0.dylib'" />
        <Exec Command="ln -sf /opt/homebrew/lib/libtesseract.dylib '$(TargetDir)/libtesseract50.dylib'" />
    </Target>
</Project>
