<Project Sdk="Microsoft.NET.Sdk.Web">
    <ItemGroup>
        <PackageReference Include="Magick.NET-Q16-AnyCPU" />
        <PackageReference Include="Microsoft.Extensions.ObjectPool" />
        <PackageReference Include="PdfPig" />
        <PackageReference Include="Tesseract"/>
    </ItemGroup>
    <Target Name="Copy tesseract dll" 
            Condition="'$(PROCESSOR_ARCHITECTURE)' == 'ARM64'"
            AfterTargets="AfterBuild">
        <Exec Command="ln -sf /opt/homebrew/lib/libleptonica.dylib ./bin/Debug/net9.0/libleptonica-1.82.0.dylib"/>
        <Exec Command="ln -sf /opt/homebrew/lib/libtesseract.dylib ./bin/Debug/net9.0/libtesseract50.dylib"/>
    </Target>
</Project>
